rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read, write, and delete files in a folder matching their own UID
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    // You can add similar rules for event images, etc.
    match /event-images/{allPaths=**} {
        allow read; // Allow anyone to read event images
        allow write: if request.auth != null; // Allow any logged-in user to write (you might want to restrict this to admins)
    }
  }
}