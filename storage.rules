rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rule for profile pictures
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rule for event images
    match /event-images/{allPaths=**} {
      allow read;
      allow write: if request.auth != null; // Should be restricted to admins
    }
    
    // Rule for artwork images
    match /artworks/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}