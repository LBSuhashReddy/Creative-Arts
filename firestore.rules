rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for the 'users' collection
    match /users/{userId} {
      // Allow anyone to read any user's profile.
      allow read: if true;

      // Only allow a logged-in user to update THEIR OWN profile document.
      allow update: if request.auth != null && request.auth.uid == userId;

      // Allow a logged-in user to create their own profile document.
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for the 'artists' collection
    match /artists/{userId} {
      // Allow anyone to read any artist's profile.
      allow read: if true;

      // Only allow a logged-in user to update THEIR OWN profile document.
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Allow a logged-in user to create their own profile document.
      allow create: if request.auth != null && request.auth.uid == userId;
    }
  }
}