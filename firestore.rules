rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for the 'artists' collection
    match /artists/{userId} {
      allow read: if true;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null &&
                        get(/databases/$(database)/documents/artists/$(request.auth.uid)).data.role == 'admin';
    }

    // Rule for the 'users' collection
    match /users/{userId} {
      allow read: if true;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // --- NEW RULE FOR EVENTS ---
    // This rule allows an admin to create events.
    match /events/{eventId} {
      // Anyone can read the list of events.
      allow read: if true;

      // Only allow a user to create an event if their profile in the 'users'
      // collection has the role of 'admin'.
      allow create: if request.auth != null &&
                        get(/databases/$(database)/documents/artists/$(request.auth.uid)).data.role == 'admin';
    }
  }
}